{
  "name": "ssr-experiments",
  "description": "Playing with parcel + react + redux + ssr",
  "version": "1.0.0",
  "main": "dist/server.js",
  "author": "Ricardo Casares <ricardocasares@gmail.com> (http://analogic.al/)",
  "repository": {
    "type": "git",
    "url": "github:ricardocasares/ssr-experiments"
  },
  "license": "MIT",
  "now": {
    "name": "ssr-experiments",
    "type": "docker",
    "features": {
      "cloud": "v2"
    },
    "alias": "ssr-experiments.analogic.al"
  },
  "scripts": {
    "r:dev": "razzle start",
    "r:build": "razzle build",
    "dev": "run-p watch start:dev",
    "watch": "run-p watch:client watch:server",
    "build": "run-p build:client build:server",
    "watch:client": "parcel watch src/client.tsx",
    "build:client": "parcel build src/client.tsx --detailed-report",
    "watch:server": "parcel watch src/server.tsx --target=node",
    "build:server": "parcel build src/server.tsx --target=node --detailed-report",
    "start": "node dist/server.js",
    "start:dev": "nodemon -q dist/server.js"
  },
  "dependencies": {
    "compression": "^1.7.3",
    "express": "^4.16.3",
    "isomorphic-unfetch": "^2.1.1",
    "libreact": "^2.0.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-helmet-async": "^0.1.0-alpha",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "url-pattern": "^1.0.3",
    "urlite": "^2.0.2"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.0",
    "@types/history": "^4.7.0",
    "@types/node": "^10.5.8",
    "@types/node-fetch": "^2.1.2",
    "@types/prop-types": "^15.5.5",
    "@types/react-dom": "^16.0.7",
    "@types/react-helmet-async": "^0.0.1",
    "@types/react-redux": "^6.0.6",
    "@types/webpack-env": "^1.13.6",
    "babel-plugin-module-resolver": "^3.1.1",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.2",
    "razzle": "^2.4.0",
    "razzle-plugin-typescript": "^2.4.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  }
}
