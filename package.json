{
  "name": "ssr-experiments",
  "description": "Playing with parcel + react + redux + ssr",
  "version": "1.0.0",
  "main": "dist/server.js",
  "author": "Ricardo Casares <ricardocasares@gmail.com> (http://analogic.al/)",
  "repository": {
    "type": "git",
    "url": "github:ricardocasares/ssr-experiments"
  },
  "license": "MIT",
  "now": {
    "name": "ssr-experiments",
    "type": "docker",
    "features": {
      "cloud": "v2"
    },
    "alias": "ssr-experiments.analogic.al"
  },
  "scripts": {
    "dev": "run-p watch start:dev",
    "watch": "run-p watch:client watch:server",
    "build": "run-s build:client build:server",
    "build:client": "webpack -p --config webpack.config.client.js",
    "watch:client": "webpack -d -w --config webpack.config.client.js",
    "build:server": "webpack -p --config webpack.config.server.js",
    "watch:server": "webpack -d -w --config webpack.config.server.js",
    "start": "node dist/server.js",
    "start:dev": "nodemon -q dist/server.js"
  },
  "dependencies": {
    "compression": "^1.7.3",
    "express": "^4.16.3",
    "isomorphic-unfetch": "^2.1.1",
    "libreact": "^2.0.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-helmet-async": "^0.1.0-alpha",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "url-pattern": "^1.0.3",
    "urlite": "^2.0.2"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.0",
    "@types/node": "^10.9.3",
    "@types/node-fetch": "^2.1.2",
    "@types/prop-types": "^15.5.5",
    "@types/react-dom": "^16.0.7",
    "@types/react-helmet-async": "^0.0.1",
    "@types/react-redux": "^6.0.6",
    "@types/webpack": "^4.4.11",
    "@types/webpack-env": "^1.13.6",
    "@types/webpack-node-externals": "^1.6.3",
    "fork-ts-checker-webpack-plugin": "^0.4.9",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-node-externals": "^1.7.2",
    "webpack-stylish": "^0.1.8"
  }
}
